<% if cart and not cart.line_items.empty? %>
  <div id="cart" class="bg-white rounded p-2">
    <%= render cart %> 
  </div>  
<% else %> 
  <div id="cart"></div>
<% end %>
<!-- The cart partial template is rendered only if the cart is not nil and it has at least one line item. -->
<!-- The cart partial template is rendered with the cart object as a local variable. -->